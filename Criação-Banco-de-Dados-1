CREATE DATABASE BANCODEDADOS
USE BANCODEDADOS
--DROP BANCODEDADOS

USE MASTER

CREATE TABLE PRODUTOS (
ID_PRODUTO integer IDENTITY(1,1) PRIMARY KEY,
NOME VARCHAR(50) NOT NULL, 
DESCRICAO VARCHAR(255) NOT NULL,
TIPO VARCHAR(30) NOT NULL,
GENERO VARCHAR(20) NOT NULL
);
GO

CREATE TABLE PLANOS (
ID_PLANO integer IDENTITY(1,1) PRIMARY KEY,
NOME VARCHAR(55) NOT NULL,
DESCRICAO VARCHAR(255),
TIPO VARCHAR(50) NOT NULL,
VALOR VARCHAR(10) NOT NULL
);
GO

CREATE TABLE FORMA_PAGAMENTO(
ID_FORMA_DE_PAGMENTO integer IDENTITY(1,1) PRIMARY KEY,
DESCRICAO VARCHAR(50) NOT NULL,
);
GO

CREATE TABLE TELEFONE (
ID_TELEFONE integer IDENTITY(1,1) PRIMARY KEY,
TELEFONE_CLIENTE VARCHAR(13) NOT NULL,
OPERADORA VARCHAR(10)  NOT NULL,
DDD VARCHAR(10) NOT NULL
);
GO

CREATE TABLE ENDERECO (
ID_ENDERECO integer IDENTITY(1,1) PRIMARY KEY,
LOGRADOURO VARCHAR(35) NOT NULL,
NUMERO VARCHAR(10) NOT NULL,
BAIRRO VARCHAR(15) NOT NULL,
CEP VARCHAR(10) NOT NULL,
COMPLEMENTO VARCHAR(15)
);
GO

CREATE TABLE CLIENTE (
ID_CLIENTE integer IDENTITY(1,1) PRIMARY KEY,
NOME VARCHAR(50) NOT NULL,
ID_ENDERECO integer FOREIGN KEY REFERENCES ENDERECO(ID_ENDERECO),
ID_TELEFONE integer FOREIGN KEY REFERENCES TELEFONE(ID_TELEFONE),
ID_PLANO integer FOREIGN KEY REFERENCES PLANOS(ID_PLANO),
EMAIL VARCHAR(50) NOT NULL,
SENHA VARCHAR(20) NOT NULL
);
GO

CREATE TABLE ALUGUEL(
ID_ALUGUEL integer IDENTITY(1,1) PRIMARY KEY,
ID_PRODUTO integer  FOREIGN KEY REFERENCES PRODUTOS(ID_PRODUTO),
ID_FORMA_DE_PAGMENTO integer FOREIGN KEY REFERENCES FORMA_PAGAMENTO(ID_FORMA_DE_PAGMENTO),
ID_CLIENTE integer FOREIGN KEY  REFERENCES CLIENTE(ID_CLIENTE)
);
GO

CREATE TABLE FUNCIONARIO (
ID_FUNCIONARIO integer IDENTITY(1,1) PRIMARY KEY,
NOME VARCHAR(255) NOT NULL,
CPF VARCHAR(11) NOT NULL,
SALARIO DECIMAL(6,2) NOT NULL,
TIPO CHAR(2)
);
GO
